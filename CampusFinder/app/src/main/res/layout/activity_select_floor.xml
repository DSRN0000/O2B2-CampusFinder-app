<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- 상단 로고 및 텍스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back" />

        <!-- 로고 -->

        <!-- 제목 -->

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="층을 클릭하세요"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- 부제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="(층을 클릭하면 해당 층의 지도를 볼 수 있습니다.)"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 스크롤 가능한 버튼 리스트 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- 5층 버튼 -->
            <android.widget.Button
                android:id="@+id/btnFloor5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/background_box"
                android:text="5층"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- 4층 버튼 -->
            <android.widget.Button
                android:id="@+id/btnFloor4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_box"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="#59B9Ea"
                android:text="4층"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <!-- 3층 버튼 -->
            <android.widget.Button
                android:id="@+id/btnFloor3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_box"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="#59B9Ea"
                android:text="3층"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <!-- 2층 버튼 -->
            <android.widget.Button
                android:id="@+id/btnFloor2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_box"
                android:backgroundTint="#59B9Ea"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="2층"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <!-- 1층 버튼 -->
            <android.widget.Button
                android:id="@+id/btnFloor1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_box"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="#59B4Ea"
                android:text="1층"
                android:textSize="16sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>