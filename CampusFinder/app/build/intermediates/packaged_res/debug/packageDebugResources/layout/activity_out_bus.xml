<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OutBus">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="뒤로 가기 버튼"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="로고 이미지"
        app:srcCompat="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 세로 스크롤 뷰 -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 텍스트: 신청등록기간 및 요금안내 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:text="1.신청등록기간 및 요금안내"
                android:textSize="18sp"
                android:textStyle="bold" />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

            <!-- 표 -->
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:divider="@android:color/darker_gray"
                android:showDividers="middle">

                <!-- Header Row -->
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:background="#4C8C2A"
                        android:gravity="center"
                        android:padding="9dp"
                        android:text="구 분"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:background="#4C8C2A"
                        android:gravity="center"
                        android:padding="9dp"
                        android:text="등록 기간"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:background="#4C8C2A"
                        android:gravity="center"
                        android:padding="9dp"
                        android:text="등록 요금\n(VAT포함)"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:background="#4C8C2A"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="비 고"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </TableRow>

                <!-- Data Rows -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="학부 신입생"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="#bfccaa"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="2024.09.02.(월)~"
                        android:padding="8dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="무료"
                        android:padding="8dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text=""
                        android:padding="8dp"
                        android:gravity="center" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="학부 재학생\n대학원생"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="#bfccaa"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="2024.09.02.(월)~"
                        android:padding="8dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="176,800원"
                        android:padding="8dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="헬로버스 플러스 app을\n다운 받아 사용"
                        android:padding="8dp"
                        android:gravity="center" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="교직원"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="#bfccaa"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="2024.09.02.(월)~"
                        android:padding="8dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="지역별 상이\n(붙임 요금표 참조)"
                        android:padding="8dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text=""
                        android:padding="8dp"
                        android:gravity="center" />
                </TableRow>
            </TableLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*결제요금은 현금영수증 발행에 따른 부가가치세(10%) 및 결제대행수수료 800원 포함 금액입니다."
                android:textSize="16sp"
                android:padding="8dp"
                android:lineSpacingExtra="4dp"
                android:background="#d7e3c5"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*각 요금은 신청일자부터 운행종료시까지 적용되는 요금이며 운행 기간은 다음과 같습니다."
                android:textSize="16sp"
                android:padding="8dp"
                android:lineSpacingExtra="4dp"
                android:background="#d7e3c5"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*(학기중노선 : ~ 2학기 종강까지 / 방학중노선(전주 3대, 군산 2대) ~25.02.28.까지)"
                android:textSize="16sp"
                android:padding="8dp"
                android:lineSpacingExtra="4dp"
                android:background="#d7e3c5"/>

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*결제에 따른 현금영수증 관련 문의는 헬로버스로 해주시기 바랍니다."
                android:textSize="16sp"
                android:padding="8dp"
                android:lineSpacingExtra="4dp"
                android:background="#d7e3c5"/>

            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*무료운행기간 안내 : 2024.09.02.(월) ~ 09.06.(금)"
                android:textSize="16sp"
                android:padding="8dp"
                android:lineSpacingExtra="4dp"
                android:background="#d7e3c5"/>

            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*2024.09.09.(월)부터 통학버스 탑승 시 모바일QR코드 태그 필수."
                android:textSize="16sp"
                android:padding="8dp"
                android:lineSpacingExtra="4dp"
                android:background="#d7e3c5"/>
            <TextView
                android:id="@+id/textSI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. 시외통학버스 노선안내"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_outbound_routes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시외방면 운행노선 바로가기"
                android:backgroundTint="#88b14b"
                android:layout_marginStart="5dp"
                style="@style/CustomButton"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_pickup_locations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하교 탑승위치 확인하기"
                android:backgroundTint="#88b14b"
                android:layout_marginStart="5dp"
                style="@style/CustomButton" />

            <Button
                android:id="@+id/btn_hellobus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                style="@style/CustomButton"
                android:text="헬로버스 앱 링크"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_pickup_locations" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


